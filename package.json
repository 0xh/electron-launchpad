    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-jade": "^0.15.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "humanize": "^0.0.9",
    "identity-obj-proxy": "^3.0.0",
    "is-error": "^2.2.1",
    "jasmine": "^2.6.0",
    "jest": "^20.0.4",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "load-grunt-tasks": "^3.3.0",
    "lodash": "^4.16.6",
    "makedeb": "0.0.4",
    "minimist": "^1.2.0",
