    "react-hot-loader": "3.0.0-beta.6",
    "react-icons": "^2.2.1",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.0.0",
    "react-split-pane": "^0.1.61",
    "react-test-renderer": "^15.6.1",
    "reselect": "^2.5.4",
    "rimraf": "^2.5.3",
    "sass-loader": "^4.0.2",
    "sinon": "^2.3.7",
    "spectron": "^3.6.4",
    "style-loader": "^0.13.1",
    "styled-components": "^1.4.4",
    "styled-flexbox": "^0.2.0",
    "sweetalert2": "^6.6.0",
    "url-loader": "^0.5.7",
    "uuid": "^2.0.3",
    "webdav-fs": "^1.3.0",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.6.0"
  },
  "dependencies": {
    "is-electron-renderer": "^2.0.1",
    "react-chartjs": "^0.8.0"
  }
}
